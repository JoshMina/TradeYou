extends ../node_modules/jade-bootstrap/_bootstrap

append style
    link(rel = "stylesheet", href = "/stylesheets/create-itemStyle.css")

block body
    .container
        h1 Create new Item

        div(id="addImage", style={background: '#6F6F6F', height: '500px', width: '500px'})
            div(id="placeholder", style={color: '#b7b6b6'})
                +icon ("plus")
                p Add Image

        br
        form(name='description', action='/createItem', method='get')
            div(class='input-group input-group-lg')
                span(class='input-group-addon' id ='sizing-addon1') Title
                input(type='text', name='Title', class='form-control',
                Placeholder='Please type in a title for your item here.', aria-describedby='sizing-addon1')
            br
            br
            br
            input(type='submit' class='btn btn-default', value='Done')



